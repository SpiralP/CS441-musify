{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "yarn workspace musify-server start",
    "build": "yarn workspaces run build",
    "test": "yarn workspace musify-client test",
    "dev": "nodemon --exec \"yarn run build && yarn run start\"",
    "postinstall": "lerna bootstrap"
  },
  "devDependencies": {
    "lerna": "^3.20.2",
    "nodemon": "^2.0.2"
  },
  "nodemonConfig": {
    "ignore": [
      "packages/client/build",
      "packages/server/dist"
    ],
    "ext": "ts,tsx,json"
  }
}
